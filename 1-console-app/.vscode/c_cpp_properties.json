{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/include/**"
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64",
            "compilerArgs": [
                "-Wuninitialized",          // Enable uninitialized warnings
                "-Werror=uninitialized"     // Treat uninitialized as errors
            ],
            "clangTidyEnabled": true,               // Enable clang-tidy
            "clangTidyArgs": [
                "--checks=-*,clang-analyzer-*",      // Example: Enable clang-analyzer checks
                "--warnings-as-errors=*"
            ],
            "clangTidyPath": "/usr/local/opt/llvm/bin/clang-tidy"
        }
    ],
    "version": 4
}